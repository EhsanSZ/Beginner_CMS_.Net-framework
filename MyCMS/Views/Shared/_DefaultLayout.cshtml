<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title>وبلاگ آموزشی و خبری برنامه نویسی</title>
    <base href="">
    <meta name="googlebot" content="index,follow">
    <meta name="robots" content="noodp,noydir">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/style.css">
    <script src="/Content/js/jquery.min.js"></script>
</head>
<body>
    <script src="/Content/js/modernizr.js"></script>

    <!-- Top Menu -->
    <div class="top-menu">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-5">
                    <ul>
                        <li><a href="/"><i class="fa fa-home"></i></a></li>
                        <li><a href="/"><i class="fa fa-question-circle"></i></a></li>
                        <li><a href="/"><i class="fa fa-envelope"></i></a></li>
                    </ul>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-7">
                    <span>امروز : @DateTime.Now.ToShamsi()</span>
                </div>
            </div>
        </div>
    </div>
    <!-- End Top Menu -->
    <!-- header -->
    <header class="main-header">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="left-side">
                        <h1><a href="/">وبلاگ آموزشی و خبری برنامه نویسی</a></h1>
                        <h2 style="margin-right:30px">ASP.NET  &nbsp; &nbsp;  &nbsp; C#   &nbsp; &nbsp; &nbsp; SQL   &nbsp; &nbsp; &nbsp; JS</h2>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <form action="/Search" method="get" class="border-radius">
                        <input class="border-radius" type="text" name="q" placeholder=" جستجو کنید ... ">
                        <button><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <!-- End Header -->
    <!-- menu -->
    <nav class="main-menu">
        <div class="container">
            <span><i class="fa fa-th-list"></i></span>
            <ul>
                <li><a href="/"> صفحه اصلی </a></li>
                <li>
                    @Html.Action("ShowGroupInMenu", "News")
                </li>
                <li><a href="/Archive">آرشیو</a></li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="">@User.Identity.Name خوش آمدید</a></li>
                    <li><a href="Account/SignOut">خروج</a></li>
                }
                else
                {
                    <li><a href="/Account/Login"> ورود به سایت </a></li>
                }

            </ul>
        </div>
    </nav>
    <!-- End menu -->

    <div class="container margin-top-30">
        <div class="row">

            <aside class="col-md-4 col-sm-12 col-xs-12 pull-right">

                @if (User.Identity.IsAuthenticated)
            {
                <div class="thumbnail">
                    <ul>
                        <li>
                            <a href="/Admin/PageGroups/Index">مدیریت گروه ها</a>
                        </li>
                        <li>
                            <a href="/Admin/Pages/Index">مدیریت صفحات</a>
                        </li>
                    </ul>
                </div>
            }


                @Html.Action("ShowGroups", "News")
                <!-- most views news -->
                <section class="last-news-side border-radius">
                    @Html.Action("TopNews", "News");
                </section>
                <!-- end most views news -->
            </aside>


            <div class="col-md-8 col-sm-12 col-xs-12 ">

                @RenderBody()

            </div>


        </div>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <section class="access-links">
                        <header> دسترسی سریع </header>
                        <ul>
                            <li><a href=""> صفحه اصلی </a></li>
                            <li><a href=""> راهنمای سایت  </a></li>
                            <li><a href=""> پشتیبانی </a></li>
                            <li><a href=""> پیوندهای سایت </a></li>
                        </ul>
                    </section>
                </div>
                <div class="col-md-5 col-md-offset-1 col-sm-12 col-xs-12">
                    <div class="socials">
                        <span> شبکه های اجتماعی  من</span>
                        <a href="https://www.linkedin.com/mwlite/in/ehsan-seyedzadeh-a53b9b23b"><i class="fa fa-linkedin"></i></a>
                        <a href="https://github.com/EhsanSZ"><i class="fa fa-github"></i></a>
                        <a href="https://www.instagram.com/ehsan_sz73/"><i class="fa fa-instagram"></i></a>
                        <a href="https://t.me/ehsan_sz73"><i class="fa fa-paper-plane"></i></a>
                        <div class="clearfix"></div>
                    </div>

                </div>
            </div>
        </div>
    </footer>

    <script src="/Content/js/bootstrap.min.js"></script>
    <script src="/Content/js/owl.carousel.js"></script>
    <script src="/Content/js/script.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
